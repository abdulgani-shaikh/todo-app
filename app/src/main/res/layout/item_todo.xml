<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/card_default_elevation"
    app:cardCornerRadius="@dimen/card_default_radius"
    android:layout_marginTop="@dimen/card_margin_vertical"
    android:layout_marginHorizontal="@dimen/card_margin_horizontal"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/default_horizontal_space"
        android:paddingVertical="@dimen/default_vertical_space"
        >

        <TextView
            android:id="@+id/todo_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="TODO TITLE"
            style="@style/TodoTitleStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/todo_barrier"
            />

        <TextView
            android:id="@+id/todo_subtitle_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="TODO SUBTITLE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/todo_title_text"
            app:layout_constraintEnd_toStartOf="@id/todo_barrier"
            style="@style/TodoSubtitleStyle"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/todo_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="edit_btn"
            app:barrierDirection="left"
            />

        <ImageButton
            android:id="@+id/edit_btn"
            android:src="@drawable/ic_pencil"
            android:contentDescription="@string/edit_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/todo_barrier"
            app:layout_constraintEnd_toStartOf="@id/delete_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/IconButtonStyle"
            />

        <ImageButton
            android:id="@+id/delete_btn"
            android:src="@drawable/ic_trash"
            android:contentDescription="@string/delete_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/edit_btn"
            app:layout_constraintEnd_toStartOf="@id/complete_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/IconButtonStyle"
            />

        <ImageButton
            android:id="@+id/complete_btn"
            android:src="@drawable/ic_check_circle"
            android:contentDescription="@string/check_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/delete_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/IconButtonStyle"
            />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/action_btn_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="edit_btn,complete_btn,delete_btn"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>